              <title>success-filled</title>
              <g
                id="Page-1"
                stroke="none"
                stroke-width="1"
                fill="none"
                fill-rule="evenodd"
              >
                <g
                  id="add-copy-2"
                  fill="#07bc0c"
                  transform="translate(42.666667, 42.666667)"
                >
                  <path
